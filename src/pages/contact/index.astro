---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="ContactMe"
  ><div
    dir="rtl"
    class="bg-slate-100 container mx-auto max-w-2xl p-8 rounded-lg shadow-md"
  >
    <h2 class="text-2xl font-bold text-center">با من تماس بگیرید</h2>

    <div class="flex flex-col items-center mt-4">
      <div class="flex items-center mb-4">
        <i class="fas fa-phone text-gray-500 mr-2"></i>
        <a href="tel:+989123456789" class="text-gray-800 hover:text-blue-500"
          >شماره تماس: 7978 246 902 98+</a
        >
      </div>
      <div class="flex items-center mb-4">
        <i class="fas fa-envelope text-gray-500 mr-2"></i>
        <a
          href="mailto:youremail@example.com"
          class="text-gray-800 hover:text-blue-500"
          >ایمیل: iamsajjad.bn@gmail.com</a
        >
      </div>
      <div class="flex items-center mb-4">
        <i class="fas fa-globe text-gray-500 mr-2"></i>
        <a
          href="https://www.example.com"
          class="text-gray-800 hover:text-blue-500"
          >گیت هاب : https://www.github.com</a
        >
      </div>
    </div>

    <div class="flex justify-center mt-6">
      <p class="text-gray-500 mr-2">شبکه‌های اجتماعی:</p>
      <a
        href="https://www.instagram.com/yourusername/"
        target="_blank"
        class="hover:text-blue-500 m-1"
      >
        <svg
          class="h-8 w-8 text-red-500"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
          <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
          <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg
        >
      </a>
      <a
        href="https://t.me/yourusername"
        target="_blank"
        class="hover:text-blue-500 m-1"
      >
        <svg
          class="h-8 w-8 text-blue-500"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z"></path>
          <path d="M15 10l-4 4l6 6l4 -16l-18 7l4 2l2 6l3 -4"></path></svg
        >
      </a>
      <a
        href="https://eitaa.com/yourusername"
        target="_blank"
        class="hover:text-blue-500"
      >
        <svg
          class="h-8 w-8 text-orange-500 m-1"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path
            d="M22.65 14.39L12 22.13 1.35 14.39a.84.84 0 0 1-.3-.94l1.22-3.78 2.44-7.51A.42.42 0 0 1 4.82 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.49h8.1l2.44-7.51A.42.42 0 0 1 18.6 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.51L23 13.45a.84.84 0 0 1-.35.94z"
          ></path></svg
        >
