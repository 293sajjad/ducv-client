---
import AppFooter from "../components/AppFooter.astro";
import AppHeader from "../components/AppHeader.astro";
import Container from "../components/Container.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="fa" dir="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Template built with tailwindcss using Tailus blocks v2"
    />
    <title>DUCV - {title}</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Urbanist:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-white dark:bg-gray-900">
    <AppHeader />
    <main class="space-y-10 mb-10">
      <div class="relative font-[Rubik]" id="home">
        <div
          aria-hidden="true"
          class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20"
        >
          <div
            class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700 animation"
          >
          </div>
          <div
            class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600 animation"
          >
          </div>
        </div>
        <Container>
          <div class="relative pt-36 ml-auto">
            <div class="lg:w-2/3 text-center mx-auto" dir="rtl">
              <slot />
            </div>
          </div>
        </Container>
      </div>
    </main>
    <AppFooter />
  </body>
</html>
<style>
  @import url("https://fonts.googleapis.com/css2?family=Lalezar&display=swap&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap");
  html {
    font-family: Urbanist, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
  }
</style>
